<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          title="Wookie widget container"
          xtype="dialog">
    <items
            jcr:primaryType="cq:Widget"
            xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                    jcr:primaryType="cq:Panel"
                    title="Widget Info">
                <items jcr:primaryType="cq:WidgetCollection">
                    <userid
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Enter User"
                            name="./userid"
                            xtype="textfield"
                            />
                    <containertitle
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Enter Title"
                            name="./title"
                            xtype="textfield"
                            />
                    <selectuser
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Select User"
                            options="/bin/get/aem-users.json"
                            name="./user"
                            xtype="selection"
                            type="select"
                            />
                    <widgetid
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Wookie Widget ID"
                            name="./wookieWidget"
                            disabled="{Boolean}true"
                            xtype="textfield"
                            />
                    <clearButton
                            jcr:primaryType="cq:Widget"
                            text="Clear Wookie Widget ID"
                            xtype="button">
                            <listeners
                                    jcr:primaryType="nt:unstructured"
                                    click="function(component, event){component.previousSibling().setValue('');}"
                                    />
                    </clearButton>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
